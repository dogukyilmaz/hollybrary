{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2017"],
    "module": "ESNext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "src"
  }
  // "include": ["src", ],
  // "exclude": ["node_modules", "dist"]
}
